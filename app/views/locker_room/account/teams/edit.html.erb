<h2>Ehit Team</h2>

<%= form_for(current_team, url: locker_room.team_path) do |f| %>
  <% if current_team.errors.any? %>
  <%= render 'locker_room/shared/errors', resource: current_team %>
  <% end %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :plan_id %>
    <% plans = LockerRoom::Plan.all.map { |p| [p.name, p.id] } %>
    <%= f.select :plan_id, plans %>
  </p>
  <%= f.submit 'Update Team' %>
<% end %>
