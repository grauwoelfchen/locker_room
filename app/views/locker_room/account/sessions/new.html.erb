<h2>Signin</h2>

<p>Team: <%= current_team.name %></p>

<%= form_tag locker_room.login_path, method: :post, novalidate: 'novalidate' do %>
<p>
  <%= label_tag :email %><br>
  <%= email_field_tag :email %>
</p>
<p>
  <%= label_tag :password %><br>
  <%= password_field_tag :password %>
</p>
<p><%= submit_tag 'Signin' %></p>
<% end %>

<ul>
  <li><%= link_to 'Fogot Password?', locker_room.new_password_recovery_path %></li>
  <li><%= link_to 'New Member?', locker_room.registration_path %></li>
  <li><%= link_to 'Create new Team?', locker_room.registration_url(subdomain: false) %></li>
</ul>
