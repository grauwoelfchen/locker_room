<h2>Signup</h2>

<p>Team: <%= current_team.name %></p>

<%= form_for @user, url: locker_room.registration_path, method: :post, html: {novalidate: 'novalidate'} do |f| %>
<% if @user.errors.any? %>
<%= render 'locker_room/shared/errors', resource: @user %>
<% end %>
<%= render 'form', f: f %>
<p><%= f.submit 'Signup' %></p>
<% end %>

<ul>
  <li><%= link_to 'Have an account?', locker_room.login_path %></li>
</ul>
