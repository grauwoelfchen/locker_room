<% if user_signed_in? %>
  <p>Signed in as <%= current_user.email %></p>
  <p>
    <%= link_to 'Top', locker_room.root_path %>
    &middot;
    <%= link_to 'Account Settings', locker_room.edit_user_path %>
    <% if current_team && owner? %>
      &middot;
      <%= link_to 'Team Settings', locker_room.edit_team_path %>
    <% end %>
    &middot;
    <%= link_to 'Signout', locker_room.logout_path %>
  </p>
<% end %>
